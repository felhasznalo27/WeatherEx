@model WeatherEx2.Models.UserCityItem

@{
    ViewBag.Title = "AddNewCity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Város felvétele saját listára</h2>

@using (Html.BeginForm("SaveNewCity", "UserCity", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2" for="@Model.FavoriteCity">Város:</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CityId, new SelectList(Model.PossibleCities, "Id", "CityName"), "--válasszon--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CityId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="@Model.FavoriteCity">Kedvencnek jelölés:</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.FavoriteCity)
                    @Html.ValidationMessageFor(model => model.FavoriteCity, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Mentés" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Vissza a városok listájához", "Index")
</div>
