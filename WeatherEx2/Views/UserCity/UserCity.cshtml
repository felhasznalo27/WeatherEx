@model WeatherEx2.ViewModels.UserCityViewModel

@{
    ViewBag.Title = "UserCity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Megfigyelt városok</h2>

<p>
    @Html.ActionLink("Város hozzáadása", "AddNewCity")
</p>
<table class="table">
    <tr>
        <th>
            Név
        </th>
        
        <th>
            Országkód
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.UserCityList)
    {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.CityName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.CountryCode)
            </td>
            <td>
                @Html.ActionLink("Szerkesztés", "EditCity", new { id = item.Id }) |
                @Html.ActionLink("Időjárás", "CityDetails", new { id = item.Id }) |
                @Html.ActionLink("Törlés", "DeleteCity", new { id = item.Id })
            </td>
        </tr>
    }

</table>
